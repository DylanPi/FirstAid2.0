/* components/popup.wxss */
.wx-popup {
  z-index: 999;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
 
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid red;
}
.wx-popup-con {
  margin: 60rpx 20rpx;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.btn-ok {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}
.btn-nok {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}

.btn-ok{
  font-weight: bold;
  padding-bottom: 15%;
  background-color: rgba(212, 32, 32, 0.459);
}

.btn-nok{
  font-weight: bold;
  padding-bottom: 15%;
  background-color: rgba(123, 255, 174, 0.301);
}